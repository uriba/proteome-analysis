month = {feb},
number = {9},
pages = {E1038--1047},
pmid = {25695966},
title = {{Mechanistic links between cellular trade-offs, gene expression, and growth.}},
url = {http://www.pnas.org/content/112/9/E1038.abstract},
volume = {112},
year = {2015}
}


  title = {{Cultivation of an Obligate Fe(II)-Oxidizing Lithoautotrophic Bacterium Using Electrodes.}},
  url = {http://mbio.asm.org/content/4/1/e00420-12.short http://www.ncbi.nlm.nih.gov/pubmed/23362318},

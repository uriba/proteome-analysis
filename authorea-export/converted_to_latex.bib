  institution = {Institut f\"{u}r Molekulare Biowissenschaften, Johann Wolfgang Goethe-Universit\"{a}t, Max-von-Laue-Str, 9, 60438 Frankfurt am Main, Germany. regenberg@em.uni-frankfurt.de},
  journal = {Genome biology},
  number = {11},
  pages = {R107},
  title = {{Growth-rate regulated genes have profound impact on interpretation of transcriptome profiling in Saccharomyces cerevisiae.}},
  volume = {7},
  year = {2006},
}


